<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation = "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.miguelalvarez.homecontrol.TempControl">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".5">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fan Off"
                android:id="@+id/rbFanOff"
                android:layout_weight=".5"
                android:nestedScrollingEnabled="false"
                android:onClick="buttonClickTemp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fan Auto"
                android:id="@+id/rbFanAuto"
                android:layout_weight=".5"
                android:onClick="buttonClickTemp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cool"
                android:id="@+id/rbCool"
                android:checked="false"
                android:layout_weight=".33"
                android:onClick="buttonClickTemp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:id="@+id/rbOff"
                android:checked="false"
                android:layout_weight=".33"
                android:onClick="buttonClickTemp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heat"
                android:id="@+id/rbHeat"
                android:checked="false"
                android:layout_weight=".33"
                android:onClick="buttonClickTemp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etTempSet"
            android:layout_weight=".5"
            android:text="75"
            android:textAlignment="gravity" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/bTempDec"
            android:layout_weight=".25"
            android:onClick="buttonClickTemp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/bTempInc"
            android:layout_weight=".25"
            android:onClick="buttonClickTemp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Set"
            android:id="@+id/bTempSet"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".5"
            android:onClick="buttonClickTemp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temp 1:"
        android:id="@+id/tvTemp1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temp 2:"
        android:id="@+id/tvTemp2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temp 3:"
        android:id="@+id/tvTemp3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temp 4:"
        android:id="@+id/tvTemp4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temp 5:"
        android:id="@+id/tvTemp5" />

</LinearLayout>
