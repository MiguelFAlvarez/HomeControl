<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lights"
            android:id="@+id/bLights"
            android:layout_marginTop="0dp"
            android:onClick="openActivity" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Temp Control"
            android:id="@+id/bTemp"
            android:layout_marginTop="0dp"
            android:onClick="openActivity" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Status Map"
            android:id="@+id/bStatus"
            android:layout_marginTop="0dp"
            android:onClick="openActivity" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Jacuzzi"
            android:id="@+id/bJacuzzi"
            android:layout_marginTop="0dp"
            android:onClick="openActivity" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:id="@+id/bUpdate"
            android:layout_marginTop="0dp"
            android:onClick="openActivity" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33">


            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Lights"
                android:id="@+id/tvLights"
                android:layout_marginRight="0dp"
                android:layout_marginEnd="280dp"
                android:layout_marginTop="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Light 1 off"
                android:id="@+id/tvLight1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Light 2 off"
                android:id="@+id/tvLight2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Light 3 off"
                android:id="@+id/tvLight3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Light 4 off"
                android:id="@+id/tvLight4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Light 5 off"
                android:id="@+id/tvLight5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33">


            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Temp"
                android:id="@+id/tvTemp"
                android:layout_marginRight="0dp"
                android:layout_marginEnd="280dp"
                android:layout_marginTop="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fan status:"
                android:id="@+id/tvFanStatus" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Temp Mode:"
                android:id="@+id/tvTempMode" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Set Temp:"
                android:id="@+id/tvSetTemp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Temp 1:"
                android:id="@+id/tvTemp1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Temp 2:"
                android:id="@+id/tvTemp2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33">

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Doors"
                android:id="@+id/tvDoors"
                android:layout_marginRight="0dp"
                android:layout_marginEnd="280dp"
                android:layout_marginTop="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1: Closed"
                android:id="@+id/tvDoor1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="2: Closed"
                android:id="@+id/tvDoor2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3: Closed"
                android:id="@+id/tvDoor3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="4: Closed"
                android:id="@+id/tvDoor4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="5: Closed"
                android:id="@+id/tvDoor5" />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>
